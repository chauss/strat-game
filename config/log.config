[loggers]
keys=root,model,controller,tui

[handlers]
keys=consoleHandler,fileHandler,tuiHandler

[formatters]
keys=std,tuiFormat

[logger_root]
level=DEBUG
handlers=consoleHandler

[logger_model]
level=DEBUG
handlers=consoleHandler,fileHandler
qualname=model
propagate=0

[logger_controller]
level=DEBUG
handlers=consoleHandler,fileHandler
qualname=controller
propagate=0

[logger_tui]
level=DEBUG
handlers=tuiHandler,fileHandler
qualname=tui
propagate=0

[handler_consoleHandler]
class=StreamHandler
level=DEBUG
formatter=std
args=(sys.stdout,)

[handler_fileHandler]
class=handlers.RotatingFileHandler
level=DEBUG
formatter=std
args=('StratGame.log', 'a', 10485760)

[handler_tuiHandler]
class=StreamHandler
level=INFO
formatter=tuiFormat
args=(sys.stdout,)

[formatter_std]
format=%(asctime)s [%(module)-16s: %(levelname)-8s] %(message)s
datefmt=%Y/%m/%d %H:%M:%S

[formatter_tuiFormat]
format=%(message)s
datefmt=